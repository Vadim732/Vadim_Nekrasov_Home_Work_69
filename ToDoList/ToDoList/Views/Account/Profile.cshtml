@model ToDoList.ViewModels.UserProfileViewModel

@{
    ViewBag.Title = "User profile";
}

<h3 class="text-center">Your profile</h3>
<table class="table">
    <thead class="table-dark">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>@Model.User.UserName</td>
        <td>@Model.User.Email</td>
        <td>
            <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Logout">Logout</a>
        </td>
    </tr>
    </tbody>
</table>

<h3 class="text-center mt-5 mb-1">Tasks you created</h3>
<div>
    @if (Model.CreatedAssignments.Any())
    {
        <table class="table table-striped">
            <thead class="table-dark">
            <tr>
                <th>Task name</th>
                <th>Performer</th>
                <th>Task date creation</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var a in Model.CreatedAssignments)
            {
                <tr>
                    <td>@a.Name</td>
                    <td>@a.ArtistName</td>
                    <td>@a.DateCreation</td>
                    <td>
                        @if (a.Priority == 1) { <p class="priority-color-3">High</p> }
                        @if (a.Priority == 2) { <p class="priority-color-2">Medium</p> }
                        @if (a.Priority == 3) { <p class="priority-color-1">Low</p> }
                    </td>
                    <td>
                        @if (a.Status == 1) { <p>New</p> }
                        @if (a.Status == 2) { <p>Open</p> }
                        @if (a.Status == 3) { <p>Closed</p> }
                    </td>
                    <td>
                        @if (a.Status == 1)
                        {
                            <a asp-action="TakeOnTask" asp-controller="Assignment" asp-route-assignmentId="@a.Id" class="btn btn-outline-success">Take on the task</a>
                            <a asp-action="Open" asp-controller="Assignment" asp-route-assignmentId="@a.Id" class="btn btn-outline-dark">Open</a>
                            <a asp-action="Details" asp-controller="Assignment" asp-route-assignmentId="@a.Id" class="btn btn-outline-dark">Details</a>
                            <a asp-action="Delete" asp-controller="Assignment" asp-route-assignmentId="@a.Id" class="btn btn-outline-danger">Delete</a>
                        }
                        @if (a.Status == 2)
                        {
                            <a asp-action="Close" asp-controller="Assignment" asp-route-assignmentId="@a.Id" class="btn btn-outline-dark">Close</a>
                            <a asp-action="Details" asp-controller="Assignment" asp-route-assignmentId="@a.Id" class="btn btn-outline-dark">Details</a>
                        }
                        @if (a.Status == 3)
                        {
                            <a asp-action="Delete" asp-controller="Assignment" asp-route-assignmentId="@a.Id" class="btn btn-outline-danger">Delete</a>
                            <a asp-action="Details" asp-controller="Assignment" asp-route-assignmentId="@a.Id" class="btn btn-outline-dark">Details</a>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <h4 class="text-center">You haven't created any tasks yet :с</h4>
        <p class="text-center"><a asp-action="Create" asp-controller="Assignment" class="btn btn-dark">Add task</a></p>
    }
</div>